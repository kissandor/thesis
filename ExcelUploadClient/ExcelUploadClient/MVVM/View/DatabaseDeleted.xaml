<UserControl x:Class="ExcelUploadClient.MVVM.View.DatabaseDeleted"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExcelUploadClient.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid Background="#F0F0F0" 
                Margin="10,50,10,10">
        <Border Background="#F0F0F0" 
                BorderBrush="Gray" 
                BorderThickness="0,1,0,1"
                VerticalAlignment="Center"
                Margin="30,0,30,0">
            <StackPanel>
                <TextBlock Text="All data has been deleted from the database." 
                       FontSize="20" Margin="0, 40, 0, 40"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
