<UserControl x:Class="ExcelUploadClient.VMVM.View.Categories"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExcelUploadClient.VMVM.View" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="DataGridCategories" 
          Margin="10,50,10,10"
          AutoGenerateColumns="False"
          ItemsSource="{Binding Categories}"
          Style="{StaticResource DataGridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="2*"/>
                <DataGridTextColumn Header="Category Name" Binding="{Binding CategoryName}"  Width="4*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
